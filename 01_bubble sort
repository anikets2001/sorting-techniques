//bubble sort
#include<iostream>
using namespace std;

//function to sort the array
void insertionSort(int arr[],int length)
{
  for(int i=0;i<length;i++)
  {
    for(int j=0;i<length-1;i++)
    {
      if(arr[j]<arr[i])
       {
         int temp=arr[j];
         arr[j]=arr[i];
         arr[j]=temp;
       }    
    }
  }
}
int main()
{
    int arr[]={4,2,6,3,8,1};
    int length=sizeof(arr)/sizeof(arr[0]);
    
    cout<<"Original array:"<<" ";
    for(int i=0;i<length;i++)
    {
        cout<<arr[i]<<" ";
    }
    
    cout<<endl;
    //function call
    insertionSort(arr,length);
    
    //printing sorted array
    cout<<"Sorted array: ";
    for(int i=0;i<length;i++)
    {
        cout<<arr[i]<<" ";
    }
}
